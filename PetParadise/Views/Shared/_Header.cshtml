<div class="w-100 h-100 navbar navbar-dark">
    <div class="container-fluid h-100 d-flex flex-row justify-content-start align-items-center">
        <div class="navbar-brand h-100 d-flex flex-row gap-2 align-items-center" role="button" onclick="window.location.replace('/')">
            <img src="~/Images/pet-paradise-flat-circular.png" style="height:100%">
            @if (ViewBag.EnableSearchMenu)
            {
                <h5 class="fw-bolder stext-lighter">Pet Dashboard</h5>
            }
        </div>

        @if (ViewBag.EnableSearchMenu)
        {
            <div id="pet-nav-controls" class="w-50 d-flex flex-row gap-2 flex-wrap">
                <ul class="flex-grow-1 nav navbar-nav d-flex flex-row gap-3">
                    <li class="nav-item" role="button">
                        <a href="/pet/@ViewBag.PetId" class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Feeds" ? "active" : "")">Feeds</a>
                    </li>
                    <li class="nav-item" role="button">
                        <a href="/nearby/clinics" class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "NearbyClinics" ? "active" : "")">Nearby Clinics</a>
                    </li>
                    <li class="nav-item" role="button">
                        <a href="/profile/@ViewBag.PetId" class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Profile" ? "active" : "")">Profile</a>
                    </li>
                </ul>

                <form id="searchForm" class="flex-grow-1 d-flex flex-row gap-2 justify-content-center align-items-end">
                    <input id="search-input" type="search" placeholder="Search for pet or clinic" name="search" autocomplete="on" class="form-control flex-grow-1" />
                    <button type="submit" class="flex-grow-1 h4" style="background: none; border:none;"><i class="fa-solid fa-magnifying-glass stext-lighter"></i></button>
                </form>
            </div>
        }
    </div>
    @if (ViewBag.EnableUserMenu)
    {
        <div class="navbar navbar-dark position-absolute end-0 me-2 d-flex flex-row">
            <ul class="navbar-nav">
                <li class="nav-item d-flex flex-row justify-content-center align-items-center gap-1">
                    <span class="stext-lighter">Welcome back, </span>
                    <a class="nav-link text-decoration-underline fw-bold" role="button">@ViewBag.Username</a>
                    <button id="logout" class="btn btn-outline-warning ms-2 fw-bold stext-lighter" role="button">Logout</button>
                </li>
            </ul>
        </div>
    }
</div>



<script>

    const form = $("#searchForm");

    form.submit(e=> {
        e.preventDefault();
        const query = $("#search-input").val();
        if (query == "") return;
        window.location.href = "/search/" + window.btoa(query);

    });

    $('#logout').click(() => {
        fetch('/auth/logout', {
            method: "POST",
            headers: {
                "Content-Type": "application/json",
                "Session-Token": getSessionToken(),
                "Authorization": "Bearer " + getSessionToken()
            },
            body: ""
        })
        .then((res) => {
            localStorage.clear();
            window.location.replace('/');
        })
    })
</script>
